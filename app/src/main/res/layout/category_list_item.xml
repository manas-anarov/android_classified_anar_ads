<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/row_item_margin_horizontal"
    android:paddingTop="@dimen/row_item_margin_vertical"
    tools:ignore="UnusedAttribute">

    <TextView
        android:id="@+id/post_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/category_item_image"
        android:textSize="19dp"
        tools:text="sssssssssssssssssssssssssssssssssssssssss"
        android:maxLines="1"
        android:layout_marginRight="10dp"
        tools:ignore="MissingConstraints" />



    <TextView
        android:id="@+id/post_description"
        android:text="ssssssssssssssssssssssssssssssssssssss"
        app:layout_constraintTop_toBottomOf="@+id/post_title"
        app:layout_constraintEnd_toStartOf="@+id/category_item_image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:maxLines="1"
        android:layout_marginRight="10dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/post_username"
        tools:text="sssssssssssssssssssssssssssssssssssssssssssssssss"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@+id/category_item_image"
        app:layout_constraintTop_toBottomOf="@+id/post_description"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginRight="10dp"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/category_item_image"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

    </ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>
